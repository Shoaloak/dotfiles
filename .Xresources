#include "xresources/Xresources.dark"
#include "perl-extensions.xresource"
!#include "disable-perl.xresource"

URxvt.transparent:          false
URxvt.shading:              10
URxvt.scrollBar:            false

! Scroll in relation to buffer (with mouse scroll of Shift+Page up)
URxvt.scrollWithBuffer:     true
! Scrollback buffer in secondary screen
URxvt.secondaryScreen:      1
URxvt.secondaryScroll:      0

URxvt.geometry:             90x40

!URxvt*font:                 xft:Inconsolata:size=10
URxvt*font:               xft:DejaVu Sans Mono:size=8
Xft*dpi:                    96
